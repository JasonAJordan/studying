    "version": "0.2.0",

    
    "configurations": [

        {
            "name": "Ruby Local file",
            "type": "Ruby",
            "request": "launch",
            "cwd": "${workspaceRoot}",           
            "program": "${file}",
            "includes": ["test", "lib"],
        },

    {
        "name": "Launch Chrome",
        "request": "launch",
        "type": "pwa-chrome",
        "url": "http://localhost:8080",
        "webRoot": "${workspaceFolder}"
    },

        {
            "type": "node",
            "request": "launch",
            "name": "Run JS",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}"
        }
    ]
}